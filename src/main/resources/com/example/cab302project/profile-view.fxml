<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="splitPane" dividerPositions="0.75" orientation="HORIZONTAL" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302project.controllers.SettingsController">

    <!-- Left (Main Settings Area) -->
    <VBox fx:id="mainContent" minWidth="0" style="-fx-padding: 0; -fx-background-color: #F0F8FF;" VBox.vgrow="ALWAYS">

        <!-- Top Title Bar (Consistent with Calendar Page) -->
        <VBox maxHeight="100" minHeight="100" prefHeight="100" style="-fx-background-color: linear-gradient(to bottom, #2e014f 0%, #4B0082 50%, #6A4B8B 100%);">
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <ImageView fx:id="logoImage" fitHeight="60" onMouseEntered="#onLogoHover" onMouseExited="#onLogoExit" preserveRatio="true" />
                <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Smart Schedule Assistant - Profile" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>
        </VBox>

        <!-- Scrollable Settings Content -->
        <ScrollPane fitToWidth="true" prefHeight="1282.0" prefWidth="480.0" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
            <VBox alignment="TOP_CENTER" spacing="24" style="-fx-background-color: #F0F8FF;">
                <padding>
                    <Insets bottom="40" left="40" right="40" top="40" />
                </padding>
            <children>
               <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
               <Label text="Alvin" />
               <Label maxWidth="1.7976931348623157E308" prefHeight="18.0" prefWidth="198.0" text="Bio" />
               <TextArea prefHeight="200.0" prefWidth="200.0" />
               <Button mnemonicParsing="false" text="Add Friend +" />
            </children>
            </VBox>
        </ScrollPane>
    </VBox>

    <!-- Right Sidebar (Expanded by Default) -->
    <VBox fx:id="aiSidebar" maxWidth="350" minWidth="350" spacing="10" style="-fx-background-color: #E6E6FA; -fx-padding: 20;">
        <Button alignment="CENTER_LEFT" maxWidth="350" onAction="#goToHome" prefHeight="50" style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;" text="HOME" />
        <Button alignment="CENTER_LEFT" maxWidth="350" prefHeight="50" style="-fx-text-fill: #1A1A1A; -fx-background-color: #D8B9FF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;" text="SETTINGS" />
        <Button alignment="CENTER_LEFT" maxWidth="350" onAction="#openFriendsPage" prefHeight="50" style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;" text="FRIENDS" />

        <!-- Mini Day View -->
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
            <GridPane fx:id="miniDayView" hgap="5" style="-fx-padding: 10; -fx-background-color: #CCCCFF; -fx-border-radius: 10; -fx-background-radius: 10;" vgap="5">
                <!-- Mini day view content filled dynamically -->
            </GridPane>
        </ScrollPane>

        <Button alignment="CENTER_LEFT" maxWidth="350" prefHeight="50" style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;" text="ACCOUNT" />
        <Button alignment="CENTER_LEFT" maxWidth="350" onAction="#handleLogOut" prefHeight="50" style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;" text="LOG OUT" />
        <VBox.margin>
            <Insets top="10" />
        </VBox.margin>
        <VBox.margin>
            <Insets top="10" />
        </VBox.margin>
    </VBox>
</SplitPane>
