<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="splitPane" dividerPositions="0.75" orientation="HORIZONTAL" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302project.controllers.FriendsController">

    <!-- Left section (Main Content) -->
    <VBox fx:id="mainContent" style="-fx-padding: 0; -fx-background-color: #F0F8FF;" VBox.vgrow="ALWAYS">

        <!-- Top Navigation -->
        <VBox prefWidth="521.0" style="-fx-background-color: linear-gradient(to bottom, #2e014f 0%, #4B0082 50%, #6A4B8B 100%);">
            <HBox spacing="20" style="-fx-padding: 10;">
                <ImageView fx:id="logoImage" fitHeight="60" preserveRatio="true"/>
                <Label text="Smart Schedule Assistant - Friends" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20 0 0 0;" />
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>

        <!-- Friends Page Content -->
        <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <HBox spacing="20" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- FRIENDS LIST PANEL -->
                <VBox spacing="15" VBox.vgrow="ALWAYS" HBox.hgrow="NEVER" maxWidth="250"
                      style="-fx-background-color: #CCCCFF; -fx-padding: 20; -fx-background-radius: 12;">
                    <Label text="FRIENDS LIST"
                           style="-fx-background-color: #D8B9FF; -fx-text-fill: #1A1A1A; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10;"/>
                    <TextField promptText="Search" style="-fx-background-radius: 10;"/>

                    <VBox spacing="10">
                        <RadioButton fx:id="user1Radio" text="Username1"/>
                        <RadioButton fx:id="user2Radio" text="Username2"/>
                        <RadioButton fx:id="user3Radio" text="Username3"/>
                    </VBox>

                    <Button text="+ Add more"
                            style="-fx-background-color: #D8B9FF; -fx-text-fill: #1A1A1A; -fx-background-radius: 12; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Friend Profile Panel -->
                <VBox spacing="15" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"
                      style="-fx-background-color: #CCCCFF; -fx-padding: 20; -fx-background-radius: 12;">
                    <Label fx:id="profileHeaderLabel" text=" Friend's Profile"
                           style="-fx-background-color: #D8B9FF; -fx-text-fill: #1A1A1A; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 10;"/>

                    <StackPane VBox.vgrow="ALWAYS"
                               style="-fx-background-color: #E6E6FA; -fx-border-color: #999; -fx-border-radius: 10; -fx-background-radius: 10;">
                        <Label fx:id="profileContentLabel" text="*Show some elements of the user's profile*" style="-fx-text-fill: #444; -fx-font-size: 14px;"/>
                    </StackPane>

                    <Button text="Show Full Profile"
                            style="-fx-background-color: #D8B9FF; -fx-text-fill: #1A1A1A; -fx-background-radius: 12; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>
        </ScrollPane>
    </VBox>

    <!-- Right Sidebar ****Need to implement AI and moce account and logout button down -->
    <VBox fx:id="aiSidebar"
          style="-fx-background-color: #E6E6FA; -fx-padding: 20;"
          minWidth="350" maxWidth="350" prefWidth="350"
          spacing="10" VBox.vgrow="ALWAYS">
        <Button text="HOME" onAction="#goToHome"
                style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;"
                maxWidth="350" prefHeight="50" alignment="CENTER_LEFT"/>
        <VBox.margin><Insets top="10"/></VBox.margin>

        <Button text="SETTINGS"
                onAction="#openSettingsPage"
                style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;"
                maxWidth="350" prefHeight="50" alignment="CENTER_LEFT"/>
        <VBox.margin><Insets top="10"/></VBox.margin>

        <Button text="FRIENDS"
                style="-fx-text-fill: #1A1A1A; -fx-background-color: #D8B9FF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;"
                maxWidth="350" prefHeight="50" alignment="CENTER_LEFT"/>

        <!-- AI Prompt Area -->
        <Label text="AI Assistant" style="-fx-text-fill: #1A1A1A; -fx-font-size: 16px; -fx-font-weight: bold;"/>
        <TextArea fx:id="aiPromptField" promptText="Enter your prompt here..."
                  wrapText="true" prefRowCount="5"
                  style="-fx-background-color: white; -fx-border-color: #CCCCFF; -fx-background-radius: 10; -fx-border-radius: 10;"/>
        <Button text="Ask" onAction="#handleAIPrompt"
                style="-fx-text-fill: white; -fx-background-color: #8000FF; -fx-font-size: 16px; -fx-background-radius: 12px; -fx-font-weight: bold;"
                maxWidth="100" alignment="CENTER"/>
        <Label fx:id="aiResponseLabel"
               wrapText="true"/>

        <Region VBox.vgrow="ALWAYS"/>

        <Button text="ACCOUNT"
                style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;"
                maxWidth="350" prefHeight="50" alignment="CENTER_LEFT"/>
    </VBox>

</SplitPane>
