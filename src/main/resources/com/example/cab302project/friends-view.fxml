<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cab302project.controllers.FriendsController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #F0F8FF;">

    <VBox spacing="20" alignment="CENTER" layoutX="100" layoutY="50" prefWidth="600">
        <Label text="My Friends" style="-fx-font-size: 28px; -fx-text-fill: #4B0082; -fx-font-weight: bold;"/>

        <ListView fx:id="friendsList" prefWidth="400" prefHeight="400" style="-fx-background-color: #E6E6FA;"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Add Friend" onAction="#onAddFriend" style="-fx-background-color: #CCCCFF; -fx-font-weight: bold;"/>
            <Button text="Remove Friend" onAction="#onRemoveFriend" style="-fx-background-color: #CCCCFF; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

</AnchorPane>
