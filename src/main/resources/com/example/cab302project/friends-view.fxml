<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<SplitPane fx:id="splitPane" orientation="HORIZONTAL" dividerPositions="0.75"
           xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.cab302project.controllers.FriendsController"
           prefHeight="Infinity">

    <!-- Left section (Main Content) -->
    <VBox fx:id="mainContent" style="-fx-padding: 0; -fx-background-color: #F0F8FF;" VBox.vgrow="ALWAYS">

        <!-- Top Navigation -->
        <VBox style="-fx-background-color: linear-gradient(to bottom, #2e014f 0%, #4B0082 50%, #6A4B8B 100%);">
            <HBox spacing="20" style="-fx-padding: 10;">
                <ImageView fx:id="logoImage" fitHeight="60" preserveRatio="true" />
                <Label text="Smart Schedule Assistant - Friends" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20 0 0 0;" />
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>

        <!-- Friends Page Content -->
        <StackPane VBox.vgrow="ALWAYS" style="-fx-background-color: #E6E6FA;">
            <Label text="Friends page content will appear here when we code for it later <3" style="-fx-font-size: 20px; -fx-text-fill: #444;" />
        </StackPane>

    </VBox>

    <!-- Right Sidebar ****Need to implement AI and moce account and logout button down -->
    <VBox fx:id="aiSidebar" style="-fx-background-color: #E6E6FA; -fx-padding: 20;" minWidth="0" maxWidth="350" spacing="10">
        <Button text="HOME" onAction="#goToHome"
                style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;"
                maxWidth="350" prefHeight="50" alignment="CENTER_LEFT"/>
        <VBox.margin><Insets top="10"/></VBox.margin>

        <Button text="SETTINGS"
                onAction="#openSettingsPage"
                style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;"
                maxWidth="350" prefHeight="50" alignment="CENTER_LEFT"/>
        <VBox.margin><Insets top="10"/></VBox.margin>

        <Button text="FRIENDS"
                style="-fx-text-fill: #1A1A1A; -fx-background-color: #D8B9FF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;"
                maxWidth="350" prefHeight="50" alignment="CENTER_LEFT"/>

        <Button text="ACCOUNT"
                style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;"
                maxWidth="350" prefHeight="50" alignment="CENTER_LEFT"/>
    </VBox>

</SplitPane>
