<VBox alignment="CENTER" prefHeight="578.0" prefWidth="332.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #2e014f 0%, #4B0082 50%, #6A4B8B 100%);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302project.controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="titleText" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="67.0" prefWidth="547.0" text="Ultimate Uni Calendar" textFill="WHITE" wrapText="true">
      <font>
         <Font name="System Bold" size="27.0" />
      </font>
   </Label>
   <Label fx:id="introText" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="67.0" prefWidth="547.0" text="Welcome Back!" textFill="WHITE" wrapText="true">
      <font>
         <Font name="System Bold" size="13.0" />
      </font></Label>
   <Label fx:id="errorLabel" text="Label" textFill="RED" visible="false" />
   <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="98.0" prefWidth="180.0" spacing="10.0">
      <children>
         <TextField fx:id="usernameField" promptText="Username" visible="false" />
         <TextField fx:id="emailField" promptText="Email" />
         <PasswordField fx:id="passwordField" prefWidth="180.0" promptText="Password" />
         <PasswordField fx:id="repeatPasswordField" prefWidth="180.0" promptText="Repeat Password" visible="false" />
      </children>
   </VBox>

    <Label fx:id="welcomeText" />
   <BorderPane prefHeight="200.0" prefWidth="200.0">
      <top>
         <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="134.0" prefWidth="239.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
               <Button fx:id="submitBtn" alignment="CENTER_LEFT" defaultButton="true" maxWidth="350" mnemonicParsing="false" onAction="#onSubmitButtonClick" prefHeight="50" style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;" text="Submit" />
                <Button fx:id="switchState" alignment="CENTER_LEFT" maxWidth="350" onAction="#onSwitchStateClick" prefHeight="39.0" prefWidth="239.0" style="-fx-text-fill: #1A1A1A; -fx-background-color: #CCCCFF; -fx-font-size: 20px; -fx-background-radius: 12px; -fx-font-weight: bold;" text="Register Instead">
                  <font>
                     <Font size="5.0" />
                  </font>
               </Button>
            </children>
            <padding>
               <Insets top="10.0" />
            </padding>
         </VBox>
      </top>
   </BorderPane>
</VBox>
